<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include ('../partials/fonts.ejs') %>
  </head>
  <body>
    <h1>Applications Page</h1>
    <div class="text">
    <%JSON.stringify(currentUser.applications)%>
      <br/>
        <% for(let i=0; i< currentUser.applications.length; i++){ %>
            <div class="card">
              <img class="images" src="<%=currentUser.applications[i].companyImage%>"></img><br/>
              <div class="name">
              <a class="nameLink" href="/portfolio/applications/<%=currentUser.applications[i].id%>">
                <%=currentUser.applications[i].position %>
              </a>
              </div>
            </div>
            <br/>
        <%  } %>
    </div>
    <br />
    <nav>
      <a class="new" href="/portfolio/applications/new">Create a new application</a> <br/>
      <a class="new" href="/portfolio">Back to Portfolio Manager</a>
  </body>
</html>
